#!/bin/bash

add-apt-repository ppa:charmers/charm-helpers

apt-get update && apt-get -y upgrade
apt-get -y install apache2 mysql-client pwgen php5 php-apc mailutils php-mail sysstat php5-mysql php5-mcrypt charm-helper-sh s3cmd

a2enmod rewrite deflate vhost_alias

rm -f /etc/cron.d/php5

service apache2 restart

juju-log "So, environment is setup. We'll wait for some hooks to fire off before we get all crazy"
